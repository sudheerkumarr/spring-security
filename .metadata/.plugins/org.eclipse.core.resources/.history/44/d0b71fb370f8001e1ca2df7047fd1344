spring.application.name=demo
server.port=8082

# Oracle settings
spring.datasource.url=jdbc:oracle:thin:@localhost:1521:mydb1
spring.datasource.username=SYSTEM
spring.datasource.password=passwd
spring.datasource.driver.class-name=oracle.jdbc.OracleDriver

# JPA settings
jpa.hibernate.ddl-auto=update
jpa.show-sql=true

# Actuator - Enable end points

# Enable all end points
#management.endpoints.web.exposure.include=*

# Enable multiple end points
management.endpoints.web.exposure.include=beans,health

# Enable single end point
#management.endpoints.web.exposure.include=info

# Exclude end points to stop exposing
# management.endpoints.web.exposure.exclude=beans

# batch config
spring.batch.jdbc.initialize-schema=ALWAYS
spring.batch.job.enabled=false
